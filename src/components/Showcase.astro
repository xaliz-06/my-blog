---
import { getCollection } from "astro:content";

const latestPosts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
).slice(0, 5);
---
<section>
    <div class="mt-4 mb-2 flex flex-col gap-3">
        <h2 class="text-5xl font-bold tracking-tight">LATEST POSTS</h2>
        <div class="w-[50%] border-3 border-black bg-fuchsia-800 h-[10px]"></div>
    </div>
    <div class="mt-12">
        <ul class="list-none flex flex-col gap-4">
            {
                latestPosts.map((post) => (
                    <li>
                        <div class="w-full border-4 border-black px-8 py-6 min-h-[15vh] bg-violet-300">
                            <div class="flex flex-col gap-4">
                                <h2 class="text-3xl font-semibold tracking-tight">{post.data.title}</h2>
                                <p class="text-xl font-archivo tracking-tighter text-gray-600">{post.data.description}</p>
                            </div>
                            
                        </div>
                    </li>
                ))
            }
        </ul>
    </div>
</section>